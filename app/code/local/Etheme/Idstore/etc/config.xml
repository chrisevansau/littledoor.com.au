			<slideshow>
				<use_slideshow>1</use_slideshow>
				<autoplay>1</autoplay>
				<speed>8000</speed>
                <slides_count>2</slides_count>
			</slideshow>
            -->
			<productpage>
				<layout>default</layout>   
                    
				<zoom_type>hover</zoom_type>
            <!--   
				<use_carousel>1</use_carousel>
            -->
			</productpage>
            <footer>
                <show_links>1</show_links>            
                <use_twitter>1</use_twitter>
                <twitter_username>8theme</twitter_username>
                <twitter_count>2</twitter_count>
                <use_flickr>1</use_flickr>
                <flickr_username>flatworldsedge</flickr_username>
                <flickr_api_key>de1d12b6db410a797a445142e00e2178</flickr_api_key>
                <flickr_count>6</flickr_count>
            </footer>
            <colors>
                <active_color>FF4A4A</active_color>
                <button_hover>fd2527</button_hover>
            </colors>

		</idstore_general>
	</default>
