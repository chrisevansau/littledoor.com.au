            </updates>
        </layout>     
    </frontend-->    
    <adminhtml>
        <layout>
            <updates>
                <idstore>
                    <file>idstore.xml</file>                
                </idstore>                        
            </updates>        
        </layout>    
    </adminhtml>    
    <admin>
        <routers>
            <idstore_route>
                <use>admin</use>
                <args>
                    <module>Etheme_Idstore</module>
                    <frontName>idstore</frontName>
                </args>
            </idstore_route>
        </routers>
    </admin>
