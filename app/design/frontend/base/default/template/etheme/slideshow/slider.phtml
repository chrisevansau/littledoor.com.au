                </thead>
                <tbody>
                    <tr><td>html</td><td><?php echo $slide->getHtml() ?></td></tr>
                    <tr><td>some_option</td><td><?php echo $slide->getSomeOption() ?></td></tr>
                    <tr><td>another_option</td><td><?php echo $slide->getAnotherOption() ?></td></tr>
                </tbody>
            </table>
            <?php if ($layers = $slide->getLayers()): ?>
            <?php foreach($layers as $layer): ?>
                <br />
                <h3>layer: <?php echo $layer['id'] ?></h3>
                <table class="data-table slide">
                <thead>
                    <tr><td>key</td><td>value</td></tr>
                </thead>
                <tbody>
