                    <tr><td>animation</td><td><?php echo $layer['animation'] ?></td></tr>
                    <tr><td>easing</td><td><?php echo $layer['easing'] ?></td></tr>
                    <tr><td>type</td><td><?php echo $layer['type'] ?></td></tr>
                    <?php if ($layer['type'] == 'image'): ?>
                    <tr><td>image</td><td><img src="<?php echo $slide->getLayerImageUrl($layer['id']) ?>" /></td></tr>
                    <?php elseif ($layer['type'] == 'text'): ?>
                    <tr><td>text</td><td><?php echo $layer['type'] ?></td></tr>
                    <?php elseif ($layer['type'] == 'video'): ?>
                    <tr><td>video</td><td><?php echo $layer['type'] ?></td></tr>
                    <?php endif ?>
                </tbody>
                </table>
                <br />
            <?php endforeach ?>
            <?php endif ?>
        <?php endif ?>
