<?php if ($img = $this->getHoverImg()): 
$width = $this->getWidth();
$height = $this->getHeight();
$product = $this->getProduct();
$image = $this->helper('catalog/image')->init($product, 'small_image', $img->getFile())->keepFrame(true)->resize($width, $height);
$alt = $this->stripTags($this->getImageLabel($this->getProduct(), 'small_image'), null, true);
?>
<img class="product_image img-hided" src="<?= $image ?>" width="<?= $width ?>" height="<?= $height ?>" alt="<?= $alt ?>" />
<?php endif; ?>
