<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addJs"><script>jquery/jquery.js</script></action>
            <action method="addItem"><type>skin_js</type><name>js/fancybox/jquery.easing-1.3.pack.js</name></action>
            <action method="addJs"><script>jquery/noconflict.js</script></action>
            <action method="addJs"><script>etheme/touch/jquery.mousewheel.js</script></action>
            <action method="addJs"><script>etheme/touch/touch.js</script></action>
            <action method="addJs"><script>etheme/zoom/zoom.js</script></action>
            <action method="addJs"><script>etheme/modernizr.js</script></action>
            <action method="addJs"><script>etheme/jquery.emodal.js</script></action>
            <action method="addJs"><script>etheme/jquery.nicescroll.min.js</script></action>
            <action method="addJs"><script>etheme/misc.js</script></action>
            <action method="addJs"><script>revslider/jquery.themepunch.plugins.min.js</script></action>
            <action method="addJs"><script>revslider/jquery.themepunch.revolution.min.js</script></action>
            <action method="addJs"><script>etheme/slideshow/efects.js</script></action>
            <action method="addJs"><script>etheme/slideshow/jquery.slider.js</script></action>
            <action method="addItem"><type>skin_css</type><name>css/bootstrap.css</name><params/></action>
            <action method="addItem"><type>skin_css</type><name>css/local.css</name><params/></action>           
            <action ifconfig="idstore_general/generaloptions/enable_responsive" method="addItem"><type>skin_css</type><name>css/bootstrap-responsive.css</name><params/></action>
            <action ifconfig="idstore_general/generaloptions/enable_responsive" method="addItem"><type>skin_css</type><name>css/responsive.css</name><params/></action>
            <action method="addItem"><type>skin_css</type><name>css/font-awesome.min.css</name><params/></action>
            <action method="addItem"><type>skin_css</type><name>css/settings.css</name><params/></action>
            <action method="addItem"><type>skin_css</type><name>css/captions.css</name><params/></action>
            <action method="addItem"><type>skin_css</type><name>css/jquery.swinxyzoom.css</name><params/></action>
            <action ifconfig="idstore_general/generaloptions/use_custom_css" method="addItem"><type>skin_css</type><name helper="idstore/data/getCustomCss" /><params/></action>    
            <block type="core/template" name="etheme_init" as="etheme_init" template="idstore/init.phtml"/>
        </reference>
        
        <!--
        <reference name="footer">
	        <block type="page/html_head" name="foot" as="foot" template="page/html/foot.phtml"/>
        </reference>
        <reference name="foot">
            <action method="addJs"><script>etheme/modal/cssParser.js</script></action>
        </reference>
        -->
        
    
        <!-- Removals -->
        <remove name="right.permanent.callout" />
        <remove name="left.permanent.callout" />
        <remove name="left.newsletter" />
        <remove name="right.reports.product.viewed" />
        <remove name="paypal.partner.right.logo" />
        <remove name="right.poll" />
        <remove name="cart_sidebar" />
                

        <!-- Header -->
        
        <!-- update top menu -->
        <reference name="top.menu"> 
            <action method="unsetChild"><name>catalog.topnav</name></action>
            <block type="catalog/navigation" name="catalog.topnav" template="catalog/navigation/top.phtml">
				<block type="cms/block" name="nav_block1">
                	<action method="setBlockId"><block_id>nav_block1</block_id></action>
            	</block>	
				<block type="cms/block" name="nav_block2">
                	<action method="setBlockId"><block_id>nav_block2</block_id></action>
            	</block>	
				<block type="cms/block" name="nav_block3">
                	<action method="setBlockId"><block_id>nav_block3</block_id></action>
            	</block>	
				<block type="cms/block" name="nav_block4">
                	<action method="setBlockId"><block_id>nav_block4</block_id></action>
            	</block>	
				<block type="cms/block" name="nav_block5">
                	<action method="setBlockId"><block_id>nav_block5</block_id></action>
            	</block> 
				<block type="cms/block" name="nav_block6">
                	<action method="setBlockId"><block_id>nav_block6</block_id></action>
            	</block>	
				<block type="cms/block" name="nav_block7">
                	<action method="setBlockId"><block_id>nav_block7</block_id></action>
            	</block>	
				<block type="cms/block" name="nav_block8">
                	<action method="setBlockId"><block_id>nav_block8</block_id></action>
            	</block>	
				<block type="cms/block" name="nav_block9">
                	<action method="setBlockId"><block_id>nav_block9</block_id></action>
            	</block>	
				<block type="cms/block" name="nav_block10">
                	<action method="setBlockId"><block_id>nav_block10</block_id></action>
            	</block>            
            </block>
        </reference>
        <!-- update top links -->
        <reference name="top.links">
        	<remove name="checkout_cart_link" />
            <block type="checkout/links" name="checkout_cart_link2">
                <action method="addCheckoutLink"></action>
            </block>
        </reference>

        <reference name="header">
            <block type="idstore/cart_header" name="top_cart" template="checkout/cart/mini_cart_top.phtml" before="-">
                <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <block type="core/text_list" name="cart_sidebar.extra_actions" as="extra_actions" translate="label" module="checkout">
                    <label>Shopping Cart Sidebar Extra Actions</label>
                </block>
            </block>
            <block type="directory/currency" name="currency_switcher" template="directory/currency/switch.phtml"/>
        </reference>
        
        <!-- Footer -->
        
        <reference name="footer">
            <block type="cms/block" name="follow_us">
                <action method="setBlockId"><block_id>follow_us</block_id></action>
            </block>
            <block type="cms/block" name="payments">
                <action method="setBlockId"><block_id>payments</block_id></action>
            </block>
            <block type="core/template" name="twitter" template="idstore/twitter/root.phtml">
                <block type="idstore/twitter_feed" name="twitter_feed">
                    <action ifconfig="idstore_general/footer/use_twitter" method="_toHtml" />
                </block>
                <block type="cms/block" name="cms_twitter">
                    <action method="setBlockId"><block_id>cms_twitter</block_id></action>
                </block>
            </block>
            <block type="core/template" name="flickr" template="idstore/flickr/root.phtml">
                <block type="idstore/flickr_screen" name="flickr_screen" template="idstore/flickr/screen.phtml"/>
                <block type="cms/block" name="cms_flickr">
                    <action method="setBlockId"><block_id>cms_flickr</block_id></action>
                </block>
            </block>
            
            <block type="page/switch" name="store_switcher" as="store_switcher" template="page/switch/stores.phtml"/>

            <block type="cms/block" name="footer_columns">
                <action method="setBlockId"><block_id>footer_columns</block_id></action>
            </block>
            <block type="cms/block" name="footer_columns2">
                <action method="setBlockId"><block_id>footer_columns2</block_id></action>
            </block>
            <block type="cms/block" name="footer_bottom_columns">
                <action method="setBlockId"><block_id>footer_bottom_columns</block_id></action>
            </block>
        </reference>
        
    </default>
    
    <!-- Category Page -->
    
    <template_admin_settings>
        <reference name="root">
            <action method="setTemplate">
                <template helper="idstore/category/template" />
            </action>
        </reference>  
        <reference name="content">
            <block type="cms/block" after="-" name="cat-bottom-banner" as="cat-bottom-banner" >
                <action method="setBlockId"><id>cat_bottom_banner</id></action>
            </block>
        </reference>
    </template_admin_settings>

    <!-- stuff for category_layered AND category_default -->
    <category_updates>
        <update handle="template_admin_settings" />
        <reference name="left">
            <block type="idstore/catalog_navigation_categories" name="nav.categories.left" after="currency" template="catalog/navigation/sidenav.phtml"/>
            <block type="idstore/product_collection" name="category-specials" after="-" template="catalog/product/carousel.phtml">
                <action method="setSale"><val>1</val></action>
                <action method="setTitle"><title>Special Products</title></action>
                <action method="setUseCurrentCategory"><val>1</val></action>
            </block>
            <block type="cms/block" after="-" name="cat_left_banner" as="cat-bottom-banner" >
                <action method="setBlockId"><id>cat_left_banner</id></action>
            </block>
            <action method="unsetChild" ifconfig="idstore_general/product_list/disable_sidebar_products">
                <name>category-specials</name>
            </action>
        </reference>
        <reference name="product_list">
            <block type="idstore/product_hoverswap" name="hoverswap" as="hoverswap" template="catalog/product/hoverswap.phtml" />
            <action method="setColumnCount">
                <columns helper="idstore/category/columns" />
            </action>
        </reference>
    </category_updates>
    
    <catalog_category_default>
        <update handle="category_updates" />
    </catalog_category_default>
    
    <catalog_category_layered>
        <update handle="category_updates" />
    </catalog_category_layered>
    
	<!--
	Product reviews page
	-->

    <reviews>
        <!-- Mage_Review -->
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </reviews>

    <review_product_list translate="label">
        <label>Catalog Product Reviews List</label>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </review_product_list>

    <!-- Search Results -->
    
    <catalogsearch_result_index>
        <update handle="template_admin_settings" />
        <reference name="search_result_list">
            <block type="idstore/product_hoverswap" name="hoverswap" as="hoverswap" template="catalog/product/hoverswap.phtml" />
            <action method="setColumnCount">
                <columns helper="idstore/category/columns" />
            </action>
        </reference>
    </catalogsearch_result_index>
    
    <catalogsearch_advanced_result>
        <update handle="template_admin_settings" />
        <reference name="search_result_list">
            <block type="idstore/product_hoverswap" name="hoverswap" as="hoverswap" template="catalog/product/hoverswap.phtml" />
            <action method="setColumnCount">
                <columns helper="idstore/category/columns" />
            </action>
        </reference>
    </catalogsearch_advanced_result>
    
    <tag_product_list>
        <update handle="template_admin_settings" />
        <reference name="search_result_list">
            <block type="idstore/product_hoverswap" name="hoverswap" as="hoverswap" template="catalog/product/hoverswap.phtml" />
            <action method="setColumnCount">
                <columns helper="idstore/category/columns" />
            </action>
        </reference>
    </tag_product_list>
    
    
    <!-- Product View -->
    
    <catalog_product_view>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        
        <reference name="head">
            <action method="addJs"><script>etheme/lightbox/lightbox.js</script></action>
            <action method="addJs"><script>jquery/jquery.prettyPhoto.js</script></action>
            <action method="addItem"><type>skin_css</type><name>css/lightbox.css</name><params/></action>
            <action method="addItem"><type>skin_css</type><name>css/prettyPhoto.css</name><params/></action>
        </reference>
        
        <reference name="product.info">
        
            <block type="cms/block" name="product_sidebar">
            	<action method="setBlockId"><block_id>product_sidebar</block_id></action>
        	</block>  
            <block type="catalog/product_view_tabs" name="info_tabs" template="catalog/product/view/tabs.phtml">
                <action method="addTab" translate="title" module="catalog">
                    <alias>description</alias>
                    <title>Product Description</title>
                    <block>catalog/product_view_description</block>
                    <template>catalog/product/view/description.phtml</template>
                </action>
                <action method="addTab" translate="title" module="catalog">
                    <alias>additional</alias>
                    <title>Additional Information</title>
                    <block>catalog/product_view_attributes</block>
                    <template>catalog/product/view/attributes.phtml</template>
                </action>
                <action method="addTab" translate="title" module="review">
                    <alias>product_review_tab</alias>
                    <title>Reviews</title>
                    <block>review/product_view_list</block>
                    <template>review/product/view/list.phtml</template>
                </action>
                <action method="addTab" translate="title" module="tag">
                    <alias>product_tags_tab</alias>
                    <title>Tags</title>
                    <block>tag/product_list</block>
                    <template>tag/list.phtml</template>
                </action>
                <block type="cms/block" name="product_custom_tab">
                	<action method="setBlockId"><block_id>product_custom_tab</block_id></action>
            	</block>
                <block type="cms/block" name="product_custom_tab2">
                    <action method="setBlockId"><block_id>product_custom_tab2</block_id></action>
                </block>  
            </block>
            <remove name="product_tag_list" />
            <reference name="product_tags_tab">
                <block type="page/html_wrapper" name="product.tag.list.list.before" as="list_before" translate="label">
                    <label>Tags List Before</label>
                    <action method="setMayBeInvisible"><value>1</value></action>
                </block>
            </reference>
            <reference name="product_review_tab">
                <block type="review/form" name="product.review.form" as="review_form">
                    <block type="page/html_wrapper" name="product.review.form.fields.before" as="form_fields_before" translate="label">
                        <label>Review Form Fields Before</label>
                        <action method="setMayBeInvisible"><value>1</value></action>
                    </block>
                </block>
            </reference>
            <block type="catalog/product_list_related" name="related_products" template="catalog/product/list/related.phtml" />
            <block type="catalog/product_list_upsell" name="upsell_products" template="catalog/product/list/upsell.phtml" />
        </reference>
    </catalog_product_view>
    <contacts_index_index translate="label">
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </contacts_index_index>
    
</layout>